{
  "name": "ERP System Dev",
  "dockerComposeFile": "../docker-compose.dev.yml",
  "service": "web",
  "workspaceFolder": "/code",
  "customizations": {
    "vscode": {
      "settings": {
        "python.pythonPath": "/usr/local/bin/python"
      },
      "extensions": [
        "ms-python.python",
        "ms-azuretools.vscode-docker",
        "esbenp.prettier-vscode",
        "GitHub.copilot"
      ]
    }
  },
  "postCreateCommand": "pip install -r requirements.txt"
}
